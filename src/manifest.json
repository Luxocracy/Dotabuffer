{
  "manifest_version": 2,

  "name": "Dotabuffer",
  "description": "Lets you view your latest matches and other stats from dotabuff.",
  "version": "0.1.5",
  "icons": { "16": "images/icon-16.png", "128": "images/icon-128.png" },
  "options_page": "Options.html",
  "background": { "scripts": ["scripts/background.js", "scripts/jquery-2.0.3.min.js"] },
  "web_accessible_resources": ["scripts/jquery-2.0.3.min.map"],
  
  "permissions": [
  "cookies", 
  "http://www.dotabuff.com/*"
  ],

  "browser_action": {
    "default_icon": "images/icon-128.png",
    "default_popup": "Dropdown.html"
  }
}